<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/imageView7"
    tools:context="com.example.android.testchildren.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="46dp"
            android:layout_marginLeft="46dp"
            android:layout_marginTop="16dp"
            android:gravity="right"
            android:orientation="horizontal">

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/simple_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp"
                    android:paddingRight="92dp"
                    android:text="Простые игры"
                    android:textColor="@color/imageView4"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/hide_simple_btn"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="Hide" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_1"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:background="@color/imageView1" />

                    <TextView
                        style="@style/tv_styles"
                        android:text="Алфавит"
                        android:textAlignment="center" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_2"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:background="@color/imageView2" />

                    <TextView
                        style="@style/tv_styles"
                        android:text="Слова" />

                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_3"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:background="@color/imageView3" />

                    <TextView
                        style="@style/tv_styles"
                        android:text="Цифры" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_4"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:background="@color/imageView4" />

                    <TextView
                        style="@style/tv_styles"
                        android:text="Животные" />

                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_5"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:background="@color/imageView5" />

                    <TextView
                        style="@style/tv_styles"
                        android:text="Цвета" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_6"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:background="@color/imageView6" />

                    <TextView
                        style="@style/tv_styles"
                        android:text="Части тела" />

                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/not_simple_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp"
                    android:paddingRight="12dp"
                    android:text="Интерактивные игры"
                    android:textColor="@color/imageView4"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/hide_not_simple_btn"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="Hide" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_7"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:background="@color/imageView1" />

                    <TextView
                        style="@style/tv_styles"
                        android:text="Выбери цвет"
                        android:textAlignment="center" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_8"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:background="@color/imageView2" />

                    <TextView
                        style="@style/tv_styles"
                        android:text="Раскраска" />

                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_9"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:background="@color/imageView3" />

                    <TextView
                        style="@style/tv_styles"
                        android:text="Выбери фигуру"
                        android:textAlignment="center" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_10"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:background="@color/imageView4" />

                    <TextView
                        style="@style/tv_styles"
                        android:text="Счеты" />

                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_11"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:background="@color/imageView5" />

                    <TextView
                        style="@style/tv_styles"
                        android:text="Найти соответствие"
                        android:textAlignment="center" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_12"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:background="@color/imageView6" />

                    <TextView
                        style="@style/tv_styles"
                        android:text="Пианино" />

                </FrameLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>