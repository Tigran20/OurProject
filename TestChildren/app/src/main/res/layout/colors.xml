<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/backgroundImage"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.android.testchildren.Colors">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_1"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:background="@color/rainbow1" />

        <ImageView
            android:id="@+id/iv_2"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:background="@color/rainbow2" />

        <ImageView
            android:id="@+id/iv_3"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:background="@color/rainbow3" />

        <ImageView
            android:id="@+id/iv_4"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:background="@color/rainbow4" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_5"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:background="@color/rainbow5" />

        <ImageView
            android:id="@+id/iv_6"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:background="@color/rainbow6" />

        <ImageView
            android:id="@+id/iv_7"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:background="@color/rainbow7" />

        <ImageView
            android:id="@+id/iv_8"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:background="@color/rainbow8" />
    </LinearLayout>
</LinearLayout>